  <p>
    <%= f.label "Título" %><br />
    <%= f.text_field :title, :size => 62 %>
  </p>
  <p>
    <%= f.label "Categoria" %><br />
    <%= f.select :living_file_category_id, @living_file_categories %>
  </p>
  <p>
    <%= f.label "Descrição" %><br />
    <%= f.text_area :description, :cols => 60, :rows => 18, :class => "mceEditor" %>
  </p>
  <p>
	<%= f.label "Imagem" %> <small>[tamanho: 584x258]</small><br/>
	<% if @living_file.living_file.exists? then %>
		<%= image_tag @living_file.living_file.url(:final) %>
		<%= image_tag @living_file.living_file.url(:small) %><br/>
	<% end %>
	<%= f.file_field :living_file %>
  </p>
  <p>
    <%= f.label "Imagem - Créditos" %><br />
    <%= f.text_field :image_credits, :size => 62 %>
  </p>
  