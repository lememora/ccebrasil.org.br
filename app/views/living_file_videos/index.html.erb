<h1><%= @living_file.title %> :: Videos</h1>

<table>
  <tr>
    <th>Posição</th>
	<th>Título</th>
  </tr>

<% @living_file_videos.each do |living_file_video| %>
  <tr>
    <td>
		<%= link_to 'Up', "/living_files/#{@living_file.id}/living_file_videos/#{living_file_video.id}/higher", :method => :put %>
		<%= link_to 'Dn', "/living_files/#{@living_file.id}/living_file_videos/#{living_file_video.id}/lower", :method => :put %>
	</td>
    <td><%=h living_file_video.title %></td>
    <td><%= link_to 'Editar', edit_living_file_living_file_video_path(@living_file, living_file_video) %></td>
    <td><%= link_to 'Remover', [@living_file, living_file_video], :confirm => 'Você tem certeza?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Novo video', new_living_file_living_file_video_path(@living_file) %>
<br/><br/>
<%= link_to 'Voltar para o arquivo vivo', @living_file %>