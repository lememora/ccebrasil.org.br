<h1><%= @project.title %> :: Textos</h1>

<table>
  <tr>
    <th>Posição</th>
	<th>Título</th>
	<th>Arquivo</th>
  </tr>

<% @project_texts.each do |project_text| %>
  <tr>
	<td>
		<%= link_to 'Up', "/projects/#{@project.id}/project_texts/#{project_text.id}/higher", :method => :put %>
		<%= link_to 'Dn', "/projects/#{@project.id}/project_texts/#{project_text.id}/lower", :method => :put %>
	</td>
    <td><%=h project_text.title %></td>
    <td><%=h project_text.prj_txt.url %></td>
    <td><%= link_to 'Editar', edit_project_project_text_path(@project, project_text) %></td>
    <td><%= link_to 'Remover', [@project, project_text], :confirm => 'Você tem certeza?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Novo texto', new_project_project_text_path(@project) %>
<br/><br/>
<%= link_to 'Voltar para o projeto', @project %>