<h1><%= @living_file.title %> :: Textos</h1>

<table>
  <tr>
    <th>Posição</th>
	<th>Título</th>
	<th>Arquivo</th>
  </tr>

<% @living_file_texts.each do |living_file_text| %>
  <tr>
    <td>
		<%= link_to 'Up', "/living_files/#{@living_file.id}/living_file_texts/#{living_file_text.id}/higher", :method => :put %>
		<%= link_to 'Dn', "/living_files/#{@living_file.id}/living_file_texts/#{living_file_text.id}/lower", :method => :put %>
	</td>
    <td><%=h living_file_text.title %></td>    
    <td><%=h living_file_text.lf_txt.url %></td>
    <td><%= link_to 'Editar', edit_living_file_living_file_text_path(@living_file, living_file_text) %></td>
    <td><%= link_to 'Remover', [@living_file, living_file_text], :confirm => 'Você tem certeza?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Novo texto', new_living_file_living_file_text_path(@living_file) %>
<br/><br/>
<%= link_to 'Voltar para o arquivo vivo', @living_file %>