<h1><%= @living_file.title %> :: Audio</h1>

<table>
  <tr>
    <th>Posição</th>
	<th>Título</th>
	<th>Arquivo</th>
  </tr>

<% @living_file_audios.each do |living_file_audio| %>
  <tr>
	<td>
		<%= link_to 'Up', "/living_files/#{@living_file.id}/living_file_audios/#{living_file_audio.id}/higher", :method => :put %>
		<%= link_to 'Dn', "/living_files/#{@living_file.id}/living_file_audios/#{living_file_audio.id}/lower", :method => :put %>
	</td>
	<td><%=h living_file_audio.title %></td>
    <td><%=h living_file_audio.lf_audio.url %></td>
    <td><%= link_to 'Editar', edit_living_file_living_file_audio_path(@living_file, living_file_audio) %></td>
    <td><%= link_to 'Remover', [@living_file, living_file_audio], :confirm => 'Você tem certeza?', :method => :delete %></td
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Novo audio', new_living_file_living_file_audio_path(@living_file) %>
<br/><br/>
<%= link_to 'Voltar para o arquivo vivo', @living_file %>