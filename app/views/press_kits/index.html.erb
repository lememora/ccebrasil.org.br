<h1>Imprensa</h1>

<table>
  <tr>
    <th>Posição</th> 
    <th>Título</th>
  </tr>

<% @press_kits.each do |press_kit| %>
  <tr>
	<td>
		<%= link_to 'Up', "/press_kits/#{press_kit.id}/higher", :method => :put %>
		<%= link_to 'Dn', "/press_kits/#{press_kit.id}/lower", :method => :put %>
	</td>
    <td><%=h press_kit.title %></td>
	<td><%= link_to 'Arquivos', press_kit_press_documents_path(press_kit) %></td>
    <td><%= link_to 'Editar', edit_press_kit_path(press_kit) %></td>
    <td><%= link_to 'Remover', press_kit, :confirm => 'Você tem certeza?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Novo kit de imprensa', new_press_kit_path %>